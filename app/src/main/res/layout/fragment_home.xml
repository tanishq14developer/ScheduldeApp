<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_1_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_menu" />

    <ImageView
        android:id="@+id/user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/round_shape_user"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/daisy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/text"
            android:textSize="24sp"
            android:text="Hello, Daisy!" />

        <TextView
            android:id="@+id/niceday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/daisy"
            android:layout_marginStart="25dp"
            android:textColor="@color/text_1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Have a nice day!" />
        <LinearLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/niceday"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">
            <TextView
                android:id="@+id/mytask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:text="My Tasks"
                android:elevation="2dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:drawableEnd="@drawable/small_circle"
                android:fontFamily="@font/opensans_semibold"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/text_shape"/>
            <TextView
                android:id="@+id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_1"
                android:text="Project"
                android:elevation="2dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_semibold"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/text_shape"/>
            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_1"
                android:text="Note"
                android:elevation="2dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/opensans_semibold"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:background="@drawable/text_shape"/>
        </LinearLayout>

        <com.github.islamkhsh.CardSliderIndicator
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indicator"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/phase1"
            app:indicatorsToShow="3" />


        <RelativeLayout
            android:id="@+id/phase1"
            android:layout_below="@id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <com.github.islamkhsh.CardSliderViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardSlider_indicator="@id/indicator" />

                <RelativeLayout
                    android:id="@+id/rlone"
                    android:layout_width="250dp"
                    android:layout_height="290dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shape_rectangle"
                    android:elevation="5dp"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp">

                    <ImageView
                        android:id="@+id/darkuser"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/square_shape"
                        android:paddingVertical="10dp"
                        android:src="@drawable/ic_user" />

                    <TextView
                        android:id="@+id/projectname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:text="Project Z"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/beck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/darkuser"
                        android:fontFamily="@font/opensans_regular"
                        android:layout_marginTop="25dp"
                        android:text="Back End"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/web"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/beck"
                        android:layout_marginTop="10dp"
                        android:text="Development"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="50dp"
                        android:text="October 2020"
                        android:fontFamily="@font/opensans_regular"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_below="@id/phase1"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/text"
                android:textSize="22sp"
                android:layout_marginStart="30dp"/>

        <RelativeLayout
            android:id="@+id/taskupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rect_shape"
            android:layout_below="@id/progress"
            android:layout_marginTop="10dp"
            android:paddingVertical="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingStart="20dp"
            android:elevation="5dp">




            <ImageView
                android:id="@+id/calender"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingVertical="10dp"
                android:background="@drawable/round_shape_user"
                android:src="@drawable/ic_calender" />

            <TextView
                android:id="@+id/projectdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="55dp"
                android:text="Project Name Here"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/opensans_regular"/>
            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="55dp"
                android:layout_below="@id/projectdata"
                android:text="2 Days"
                android:textColor="@color/text"
                android:textStyle="bold"
                android:fontFamily="@font/opensans_regular"/>

        </RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>